  <h1>タスクの一覧</h1>

  <table class="table">
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Title</th>
      <th colspan="3">Description</th>
    </tr>
      <% @tasks.each do |task| %>
    <tr>
      <td><%= task.id %></td>
      <td><%= task.title %></td>
      <td><%= task.description %></td>
      <td><%= link_to '詳細', task_path(task), class: "btn btn-outline-primary" %></td>
      <td><%= link_to '編集', edit_task_path(task), class: "btn btn-raised btn-default" %></td>
      <td><%= link_to '削除', task_path(task), method: :delete, class: "btn btn-raised btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </table>
  <p><%= link_to 'ToDoの作成', new_task_path %></p> 


